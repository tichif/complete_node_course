<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css" />
  </head>

  <body>
    <%- include('../includes/navigation.ejs') %>
    <main>
      <% if (products.length > 0) { %>
        <ul>
          <% products.forEach( p => { %>
            <li>
              <%= p.productData.title %> (<%= p.qty %>)
            </li>
          <% }) %>
        </ul>
      <% } else { %>
        <p>No products in the cart</p>
      <% } %>
    </main>
    <%- include('../includes/end.ejs') %>